# KISAN-DRISHTI Backend Environment Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
APP_NAME=KISAN-DRISHTI

# DATABASE (PostgreSQL)
DATABASE_URL=postgresql://kisan_user:your_secure_password@localhost:5432/kisan_drishti
DB_POOL_SIZE=20
DB_TIMEOUT=10000

# REDIS CACHE
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=kd:

# Cache TTL (in seconds)
CACHE_TTL_PRICES=300
CACHE_TTL_MANDIS=3600
CACHE_TTL_USERS=1800

# AUTHENTICATION & SECURITY
JWT_SECRET=super-secret-jwt-key-min-32-characters-long-for-development
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
BCRYPT_ROUNDS=10

# Session
SESSION_SECRET=dev-session-secret-key-32-chars-minimum-for-production
SESSION_EXPIRY_HOURS=720

# CORS & SECURITY
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3001,http://127.0.0.1:8080,http://127.0.0.1:3001
CORS_CREDENTIALS=true

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_ADMIN_MAX=500

# WEBSOCKET
ENABLE_WEBSOCKET=true
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_PING_TIMEOUT=5000

# LOGGING
LOG_LEVEL=info
LOG_FILE_PATH=logs/
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# FEATURES
ENABLE_VOICE=true
ENABLE_SMS_VERIFICATION=false
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGS=true

# EXTERNAL SERVICES (Optional)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=
SMS_AUTH_TOKEN=
SMS_FROM_NUMBER=

WEATHER_API_KEY=
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

MAPS_API_KEY=

# MONITORING
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
